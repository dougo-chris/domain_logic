#!/usr/bin/env bash

basedir="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

source ${basedir}/config/.env

devop_command()
{
  case "$1" in
    "clean")
      rm -rf ${basedir}/.elixir_ls
      rm -rf ${basedir}/_build
      rm -rf ${basedir}/deps
      rm -rf ${basedir}/cover
      rm -rf ${basedir}/doc
      ;;

    "build")
      mix deps.update --all && \
      mix deps.get
      ;;

    "upgrade")
      mix deps.clean --unused && \
      mix deps.update --all && \
      mix deps.get
      ;;

    "dev")
      mix linklab.api.todo.execute ReaderTodo
      ;;

    "iex")
      iex -S mix
      ;;

    "mix")
      shift
      mix $@
      ;;

    "test")
      shift
      devop_test $@
      ;;

    # Default case
    *)
      echo "invalid  command : check README.md"
      return 1
  esac
}

devop_test()
{
  case "$1" in
    "")
      mix test
      ;;

    "release")
      mix test && \
      mix dialyzer --halt-exit-status && \
      mix credo --strict && \
      mix format && \
      mix coveralls.html
      ;;

    "dialyzer")
      mix dialyzer --halt-exit-status
      ;;

    "credo")
      mix credo --strict
      ;;

    "format")
      mix format
      ;;

    "watch")
      mix test.watch
      ;;

    "cover")
      mix coveralls.html
      ;;

    "dev")
      mix test.watch --only dev:true
      ;;

    *)
      echo "invalid  command : check README.md"
      return 1
      ;;
  esac
}

devop_command $@
