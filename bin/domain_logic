#!/usr/bin/env bash

basedir="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

devop_command()
{
  case "$1" in
    "clean")
      rm -rf ${basedir}/.elixir_ls
      rm -rf ${basedir}/_build
      rm -rf ${basedir}/deps
      rm -rf ${basedir}/cover
      rm -rf ${basedir}/doc
      ;;

    "build")
      mix deps.get
      ;;

    "upgrade")
      mix deps.clean --unused --unlock && \
      mix deps.update --all && \
      mix deps.get
      ;;

    "iex")
      iex -S mix
      ;;

    "mix")
      shift
      mix $@
      ;;

    "test")
      shift
      devop_test $@
      ;;

    "docs")
      mix docs
      ;;

    # Default case
    *)
      echo "invalid  command : check README.md"
      return 1
  esac
}

devop_test()
{
  case "$1" in
    "")
      mix test
      ;;

    "dialyzer")
      mix dialyzer --halt-exit-status
      ;;

    "all")
      mix dialyzer --halt-exit-status && \
      mix test
      ;;

    "watch")
      mix test.watch
      ;;

    *)
      echo "invalid  command : check README.md"
      return 1
      ;;
  esac
}

devop_command $@
